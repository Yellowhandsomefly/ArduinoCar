<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/surfaceView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <Button
                android:id="@+id/kp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/car"
                android:textSize="45sp"
                android:text="  KP "
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/kd"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/car"
                android:textSize="45sp"
                android:text="  KD "
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/kp" />

            <Button
                android:id="@+id/Up"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/up"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/Right"
                android:layout_marginTop="11dp" />

            <Button
                android:id="@+id/Left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/Right"
                android:layout_toStartOf="@+id/Up"
                android:background="@drawable/left" />

            <Button
                android:id="@+id/Right"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/right" />

            <Button
                android:id="@+id/Down"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/down"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/Left"
                android:layout_marginBottom="14dp" />

            <Button
                android:id="@+id/bluetooth_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:text="open"
                android:layout_alignBaseline="@+id/Up"
                android:layout_alignBottom="@+id/Up"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/bluetooth_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:text="close"
                android:layout_alignBottom="@+id/bluetooth_open"
                android:layout_alignStart="@+id/kd" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluetooth_close"
                android:layout_toEndOf="@+id/kd"
                android:text="TextView" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>