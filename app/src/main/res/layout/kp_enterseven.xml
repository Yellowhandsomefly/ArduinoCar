<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit1"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_above="@+id/check"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp" />

    <EditText
        android:id="@+id/edit2"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit1"
        android:layout_toEndOf="@+id/edit1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit3"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit2"
        android:layout_toEndOf="@+id/edit2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit4"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit3"
        android:layout_toEndOf="@+id/edit3"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit5"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit4"
        android:layout_toEndOf="@+id/edit4"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit6"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit5"
        android:layout_toEndOf="@+id/edit5"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit7"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_alignTop="@+id/edit6"
        android:layout_toEndOf="@+id/edit6"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:text="確認"
        android:textStyle="bold"
        android:textSize="30sp"
        android:drawableLeft="@drawable/kp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <Button
        android:text="返回"
        android:textStyle="bold"
        android:textSize="30sp"
        android:drawableLeft="@drawable/kp3"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>