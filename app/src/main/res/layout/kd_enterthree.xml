<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit1"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/angle"
        android:layout_toEndOf="@+id/angle" />

    <EditText
        android:id="@+id/edit2"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/edit1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit3"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/edit2"
        android:layout_alignStart="@+id/MAX"
        android:layout_marginStart="44dp" />


    <EditText
        android:id="@+id/edit4"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="39dp"
        android:layout_above="@+id/back"
        android:layout_toStartOf="@+id/edit2" />


    <EditText
        android:id="@+id/edit5"
        android:background="@drawable/trangle"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:layout_marginEnd="31dp"
        android:layout_alignTop="@+id/edit4"
        android:layout_toStartOf="@+id/check" />

    <Button
        android:text="確認"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="返回"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/weight"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="權重"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/back" />

    <TextView
        android:id="@+id/angle"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="角度"
        android:layout_above="@+id/edit4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/NS"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NS"
        android:layout_above="@+id/edit1"
        android:layout_toEndOf="@+id/back" />

    <TextView
        android:id="@+id/ZO"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZO"
        android:layout_above="@+id/edit2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/PS"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS"
        android:layout_above="@+id/edit3"
        android:layout_alignEnd="@+id/edit3"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/MIN"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIN"
        android:layout_above="@+id/edit4"
        android:layout_alignStart="@+id/edit4"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/MAX"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAX"
        android:layout_above="@+id/edit5"
        android:layout_alignStart="@+id/edit5"
        android:layout_marginStart="14dp" />

</RelativeLayout>